<%- include('partials/_header') -%>
<body>

  <%- include('partials/_navigation') -%>
  

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            
            <span class="meta">Posted by
              <a href="#">Çiğdem Koçak</a>
              on <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          

          <h2 class="section-heading"><%= post.title %></h2>

          <blockquote class="blockquote"><%= post.detail %> 
          </blockquote>
          
        </div>
        <div class="col-lg-3 col-md-4" style="margin-top: 60px;">
          <form method ="" action="" class="tm-contact-form"  encType="multipart/form-data">
            <div class="form-group mb-5">
              <a href="/posts/edit/<%= post._id %>"  class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Update The Post</span></a>
            </div>
            <div class="form-group">
              <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"
                onclick="return confirm('ARE YOU SURE')"
              ><span>Delete The Post</span></a>
            </div>
          </form>   
        </div> 
        </div>
      </div>
    </div>
  </article>
  

  <hr>

  <%- include('partials/_footer') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
